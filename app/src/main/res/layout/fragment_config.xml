<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.miaxis.thermal.util.ValueUtil" />

        <variable
            name="viewModel"
            type="com.miaxis.thermal.viewModel.ConfigViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ConfigFragment">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/fragment_config_title"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_navigate_before_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/white_stroke_shape"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:layout_marginEnd="1dp"
                        android:text="@string/fragment_config_version" />

                    <View style="@style/VerticalLine" />

                    <TextView
                        android:id="@+id/tv_version"
                        style="@style/SettingBody"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                    <View style="@style/VerticalLine" />

                    <TextView
                        android:id="@+id/tv_update"
                        style="@style/SettingBody"
                        android:layout_weight="1"
                        android:background="@color/whitesmoke"
                        android:singleLine="true"
                        android:text="@string/fragment_config_check_update"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_face_version" />

                    <View style="@style/VerticalLine" />

                    <TextView
                        android:id="@+id/tv_face_version"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem"
                    android:visibility="gone">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_device_mode" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_mix"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_device_mix" />

                        <RadioButton
                            android:id="@+id/rb_server"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_device_server" />

                        <RadioButton
                            android:id="@+id/rb_client"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_device_client" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_server_host" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_host"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:hint="http://ip:port/host/"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_server_download_person_path" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_download_person_path"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:hint="api/downloadPerson"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_server_update_person_path" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_update_person_path"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:hint="api/updatePerson"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_server_upload_record_path" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_upload_record_path"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:hint="api/uploadRecord"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_mac" />

                    <View style="@style/VerticalLine" />

                    <TextView
                        android:id="@+id/tv_mac"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout style="@style/SettingItem">

                        <TextView
                            style="@style/SettingName"
                            android:layout_marginEnd="1dp"
                            android:text="@string/fragment_config_time_stamp" />

                        <View style="@style/VerticalLine" />

                        <TextView
                            android:id="@+id/tv_time_stamp"
                            style="@style/SettingBody"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:textColor="@color/dark" />

                        <View style="@style/VerticalLine" />

                        <TextView
                            android:id="@+id/tv_clear_time_stamp"
                            style="@style/SettingBody"
                            android:layout_weight="1"
                            android:background="@color/whitesmoke"
                            android:singleLine="true"
                            android:text="@string/fragment_config_reset_time_stamp"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_showing_camera" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_infrared_show"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_infrared_camera" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_visible_show"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_visible_camera" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_face_camera" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_infrared_face"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_infrared_camera" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_visible_face"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_visible_camera" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_liveness" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_liveness_open"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_open" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_liveness_close"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_close" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="设备模式" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_device_mode_attendance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="考勤" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_device_mode_gate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="闸机" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="陌生人开门限制" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_gate_limit_on"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="限制" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_gate_limit_off"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="不限制" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_forced_mask" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_forces_mask_open"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_open" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_forces_mask_close"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_close" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="记录陌生人" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_stranger_record_on"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_open" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_stranger_record_off"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_close" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_register_quality_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_register_quality_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="50 - 99"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_quality_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_quality_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="20 - 99"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_verify_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_verify_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789."
                        android:hint="0.7 - 1.0"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_mask_verify_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_mask_verify_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789."
                        android:hint="0.65 - 1.0"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_mask_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_mask_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="20 - 99"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_liveness_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_liveness_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="60 - 99"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_pupil_distance" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_pupil_distance_min"
                        style="@style/SettingBody"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="1 - 200"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_pupil_distance_max"
                        style="@style/SettingBody"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="1 - 200"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_dormancy_interval" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_dormancy_interval"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="12345"
                        android:hint="1 - 5秒"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_dormancy_delay" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_dormancy_time"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="1234567890"
                        android:hint="10 - 600秒"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_temp_device_fix" />

                    <View style="@style/VerticalLine" />

                    <TextView
                        android:id="@+id/tv_calibration"
                        style="@style/SettingBody"
                        android:background="@color/whitesmoke"
                        android:singleLine="true"
                        android:text="@string/fragment_config_click_to_temp_device_fix"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_heat_map" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_heat_map_show"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_display" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_heat_map_dismiss"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_no_display" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="测温实时显示" />

                    <View style="@style/VerticalLine" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_temp_real_time_on"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_display" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb_temp_real_time_off"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fragment_config_no_display" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_fever_score" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_fever_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789."
                        android:hint="37.2"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="温度过滤阈值" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_temp_score"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789."
                        android:hint="34.0"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_heart_beat_interval" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_heart_beat_interval"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="60 - 6000秒"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_failed_query_cold" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_failed_query_cold"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="5 - 120秒"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_verify_cold" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_verify_cold"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="2345"
                        android:hint="2 - 5秒"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="陌生人验证冷却" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_failed_verify_cold"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="2345"
                        android:hint="2 - 5秒"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_record_clear_threshold" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_record_clear_threshold"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:hint="2000 - 20000条"
                        android:inputType="number"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_flash_time" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_flash_time"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="1234567890"
                        android:hint="5 - 180 秒"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

                <LinearLayout style="@style/SettingItem">

                    <TextView
                        style="@style/SettingName"
                        android:text="@string/fragment_config_password" />

                    <View style="@style/VerticalLine" />

                    <EditText
                        android:id="@+id/et_device_password"
                        style="@style/SettingBody"
                        android:background="@color/white"
                        android:digits="0123456789"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/dark" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>