<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.miaxis.thermal.viewModel.RecordViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.RecordFragment">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="本地日志"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:src="@drawable/ic_navigate_before_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

<!--        <ImageView-->
<!--            android:id="@+id/iv_search"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="@dimen/custom_toolbar_height"-->
<!--            android:src="@drawable/ic_search_green"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:padding="12dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_name_hint"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/stroke_shape"
            app:layout_constraintTop_toBottomOf="@id/v_line"
            app:layout_constraintBottom_toTopOf="@id/srl_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_record_name"
                style="@style/record_item"
                android:text="姓名"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/lightgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_record_identify_number"
                style="@style/record_item"
                android:text="证件号码"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/lightgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_record_phone"
                style="@style/record_item"
                android:text="联系电话"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/lightgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_record_temperature"
                style="@style/record_item"
                android:text="体温"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/lightgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_record_upload"
                style="@style/record_item"
                android:text="状态"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/lightgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_record_verify_time"
                style="@style/record_item"
                android:text="时间"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_record"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/stroke_shape"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_name_hint"
            app:layout_constraintBottom_toTopOf="@id/tv_count">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:gravity="center"
            android:textSize="16sp"
            android:text='@{String.format("%s / %s", viewModel.recordListLiveData.size(), viewModel.recordCountLiveData)}'
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>