<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.miaxis.thermal.viewModel.AddPersonViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.AddPersonFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="新增人员"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:src="@drawable/ic_navigate_before_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/default_header"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_name"
            app:layout_constraintTop_toBottomOf="@id/v_line"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_number">

            <TextView
                android:id="@+id/tv_name_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_name"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_name"
                app:layout_constraintStart_toEndOf="@id/tv_name_hint"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/darkgray"
                android:textSize="18sp"
                android:background="@null"
                android:hint="@string/fragment_add_person_name_hint"
                android:text="@={viewModel.name}"
                android:maxLength="20"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintEnd_toStartOf="@id/tv_name_warn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_name_warn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="格式错误"
                android:textSize="16sp"
                android:textColor="@color/darkred"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_phone">

            <TextView
                android:id="@+id/tv_number_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_number"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_number"
                app:layout_constraintStart_toEndOf="@id/tv_number_hint"/>

            <EditText
                android:id="@+id/et_number"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/darkgray"
                android:textSize="18sp"
                android:background="@null"
                android:hint="@string/fragment_add_person_number_hint"
                android:text="@={viewModel.number}"
                android:maxLength="18"
                android:inputType="phone"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintEnd_toStartOf="@id/tv_number_warn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_number_warn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="格式错误"
                android:textSize="16sp"
                android:textColor="@color/darkred"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_effect_time">

            <TextView
                android:id="@+id/tv_phone_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_phone"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/et_phone"
                app:layout_constraintStart_toEndOf="@id/tv_phone_hint"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/darkgray"
                android:textSize="18sp"
                android:background="@null"
                android:hint="@string/fragment_add_person_phone_hint"
                android:text="@={viewModel.phone}"
                android:maxLength="11"
                android:inputType="phone"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintEnd_toStartOf="@id/tv_phone_warn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_phone_warn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="格式错误"
                android:textSize="16sp"
                android:textColor="@color/darkred"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_effect_time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_invalid_time">

            <TextView
                android:id="@+id/tv_effect_time_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_effect_time"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_effect_time"
                app:layout_constraintStart_toEndOf="@id/tv_effect_time_hint"/>

            <TextView
                android:id="@+id/tv_effect_time"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="18sp"
                android:background="@null"
                android:text="@={viewModel.effectTime}"
                android:gravity="center|start"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_invalid_time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_type">

            <TextView
                android:id="@+id/tv_invalid_time_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_invalid_time"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_invalid_time"
                app:layout_constraintStart_toEndOf="@id/tv_invalid_time_hint"/>

            <TextView
                android:id="@+id/tv_invalid_time"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="18sp"
                android:background="@null"
                android:text="@={viewModel.invalidTime}"
                android:gravity="center|start"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_face_feature">

            <TextView
                android:id="@+id/tv_type_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_type"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rg_type"
                app:layout_constraintStart_toEndOf="@id/tv_type_hint"/>

            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/rb_worker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/fragment_add_person_type_staff"
                    android:textSize="18sp"
                    android:checked="@={viewModel.type}"/>

                <RadioButton
                    android:id="@+id/rb_visitor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/fragment_add_person_type_visitor"
                    android:textSize="18sp"
                    android:checked="@={!viewModel.type}"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </RadioGroup>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_face_feature"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom">

            <TextView
                android:id="@+id/tv_face_feature_hint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/fragment_add_person_face"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightgrey"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_face_feature"
                app:layout_constraintStart_toEndOf="@id/tv_face_feature_hint"/>

            <TextView
                android:id="@+id/tv_face_feature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{viewModel.faceFeatureHint}"
                android:textSize="18sp"
                android:gravity="center|start"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_green"
            android:gravity="center"
            android:text="@string/fragment_add_person_submit"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.9"
            style="@style/Widget.AppCompat.Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>