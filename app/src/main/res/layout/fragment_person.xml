<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.miaxis.thermal.viewModel.PersonViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.PersonFragment">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="本地人员"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:src="@drawable/ic_navigate_before_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:src="@drawable/ic_search_green"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_line"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line">

            <TextView
                android:id="@+id/tv_name_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="人员姓名："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:textSize="16sp"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_name_hint"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_number_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="证件号码："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/et_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:textSize="16sp"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_number_hint"
                app:layout_constraintTop_toTopOf="@id/tv_number_hint"/>

            <TextView
                android:id="@+id/tv_phone_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="手机号码："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toEndOf="@id/et_number"
                app:layout_constraintTop_toBottomOf="@id/tv_name_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:textSize="16sp"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_phone_hint"
                app:layout_constraintTop_toTopOf="@id/tv_phone_hint"/>

            <TextView
                android:id="@+id/tv_face_status_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="人脸状态："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_number_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                android:id="@+id/sp_face_status"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:entries="@array/face_status"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_face_status_hint"
                app:layout_constraintTop_toTopOf="@id/tv_face_status_hint"/>

            <TextView
                android:id="@+id/tv_upload_status_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="同步状态："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toEndOf="@id/et_number"
                app:layout_constraintTop_toBottomOf="@id/tv_number_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                android:id="@+id/sp_upload_status"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:entries="@array/upload_status"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_upload_status_hint"
                app:layout_constraintTop_toTopOf="@id/tv_upload_status_hint"/>

            <TextView
                android:id="@+id/tv_person_status_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="人员状态："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_face_status_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                android:id="@+id/sp_person_status"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:entries="@array/person_status"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_person_status_hint"
                app:layout_constraintTop_toTopOf="@id/tv_person_status_hint"/>

            <TextView
                android:id="@+id/tv_person_type_hint"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:text="人员类型："
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintWidth_percent="0.15"
                app:layout_constraintStart_toEndOf="@id/sp_person_status"
                app:layout_constraintTop_toBottomOf="@id/tv_face_status_hint"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Spinner
                android:id="@+id/sp_person_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/custom_input_area_height"
                android:entries="@array/person_type"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toEndOf="@id/tv_person_type_hint"
                app:layout_constraintTop_toTopOf="@id/tv_person_type_hint"/>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_green"
                android:gravity="center"
                android:text="查询"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_person_status_hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_reset"
                app:layout_constraintWidth_percent="0.3"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:text="重置"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_person_status_hint"
                app:layout_constraintStart_toEndOf="@id/btn_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.3"
                style="@style/Widget.AppCompat.Button" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/main_color"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/btn_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_person"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_search"
            app:layout_constraintBottom_toTopOf="@id/tv_count">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_person"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:gravity="center"
            android:textSize="16sp"
            android:text='@{String.format("%s / %s", viewModel.personListLiveData.size(), viewModel.personCountLiveData)}'
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>